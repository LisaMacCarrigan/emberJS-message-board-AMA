{{#if editQuestionForm}}
  <p id="edit-prompt">Edit the fields below and select "submit" to save your changes.</p>
  <div>
    <form>
      <div class="form-group">
        <label for="input_question">Question</label>
        {{textarea class="form-control" value=input_question id="input_question" placeholder=question.question}}
      </div>

      <div class="form-group">
        <label for="type">Author</label>
        {{input class="form-control" value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="city">Notes</label>
        {{input class="form-control" value=notes id="notes" placeholder=question.notes}}
      </div>

      <button {{action 'edit' question}} class="btn btn-success btn-sm">
        <span class="glyphicon glyphicon-plus"></span> Submit
      </button>

    </form>
  </div>
{{else}}
  <button {{action 'editQuestionForm'}} class="btn btn-default btn-sm">
    <span class="glyphicon glyphicon-pencil"></span> Edit
  </button>
{{/if}}
